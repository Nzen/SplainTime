<?xml version = "1.0" encoding = "UTF-8" ?>
<project
		xmlns = "http://maven.apache.org/POM/4.0.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>
		4.0.0
	</modelVersion>
	<groupId>
		ws.nzen.tracking
	</groupId>
	<artifactId>
		splaintime
	</artifactId>
	<version>
		2.2
	</version>
	<inceptionYear>
		2015
	</inceptionYear>
	<licenses>
		<license>
			<name>
				Fair v1.0
			</name>
			<url>
				http://fairlicense.org/
			</url>
		</license>
	</licenses>
	<developers>
		<developer>
			<id>
				nzen
			</id>
			<name>
				Nicholas Prado
			</name>
			<email>
				nmprado@nzen.ws
			</email>
			<roles>
				<role>
					Implementor
				</role>
			</roles>
			<timezone>
				UTC-06:00
			</timezone>
		</developer>
	</developers>
		<dependencies>
		<!--
		<dependency>
			<groupId>
			</groupId>
			<artifactId>
			</artifactId>
			<version>
			</version>
		</dependency>
		-->
	</dependencies>
	<build>
	    <plugins>
	    	<!-- make source jar -->
		    <plugin>
				<groupId>
					org.apache.maven.plugins
				</groupId>
				<artifactId>
					maven-source-plugin
				</artifactId>
				<version>
					3.0.1
				</version>
				<executions>
					<execution>
						<id>
							attach-sources
						</id>
						<goals>
						<goal>
							jar
						</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
	    	<!-- skip tests without remembering -DskipTests -->
			<plugin>
				<groupId>
					org.apache.maven.plugins
				</groupId>
				<artifactId>
					maven-surefire-plugin
				</artifactId>
				<version>
					2.12.4
				</version>
				<configuration>
					<skipTests>
						true
					</skipTests>
				</configuration>
			</plugin>
	    	<!-- config for jar -->
	    	<plugin>
				<groupId>
					org.apache.maven.plugins
				</groupId>
				<artifactId>
					maven-jar-plugin
				</artifactId>
				<version>
					3.1.0
				</version>
				<configuration>
					<archive>
						<index>
							true
						</index>
						<manifest>
							<addClasspath>
								true
							</addClasspath>
							<mainClass>
								ws.nzen.splaintime.SplainTime
							</mainClass>
						</manifest>
						<manifestEntries>
							<mode>
								development
							</mode>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
	  <!-- jdk v3 is the maven default -->
		<maven.compiler.source>
			1.8
		</maven.compiler.source>
		<maven.compiler.target>
			1.8	
		</maven.compiler.target>
	</properties>
	<description>
		A time tracking gui
	</description>
	<name>
		Splaintime
	</name>
</project>
